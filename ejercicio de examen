 void cargarmatriz(t_matrizvec[FIL][COL],int n, string nombre )
{int i,j,k;
 int longitud=0;
 longitud=nombre.length();
 int l=0;

       for(i=0;i<n;i++)
         {for(j=0;j<n;j++)
           {for(k=0;k<n;k++)
	         {vec[i].matriz[j][k]=nombre[l];
	          l++;
	         }
	   if(l==n-1)
		   {i++;
	        k=0;
			l=0;
	        } 
         }
}

 void mostrar(t_matrizvec[FIL],int n )
 {int i,j,k;
         for(i=0;i<n;i++)
           {for(j=0;j<n;j++)
              {for(k=0;k<n;k++)
		         {cout<<"["<<i<<"]"<<"["<<j<<"]"<<"["<<k<<"]"<<vec[i].matriz[j][k];
		         }
		        cout<<endl;
		      }
		     cout<<endl;
           }
            cout<<endl;
}
